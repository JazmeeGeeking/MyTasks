@model IEnumerable<MyTasks.Models.TaskItem>
@{
    ViewData["Title"] = "My Tasks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-danger">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-outline-danger">➕ Add New Task</a>
    </div>

    <table class="table table-bordered table-hover shadow">
        <thead class="bg-danger text-white">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.DueDate.ToShortDateString()</td>
                    <td>
                        <span class="badge @(task.IsCompleted ? "bg-success" : "bg-secondary")">
                            @(task.IsCompleted ? "Yes" : "No")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-dark me-1">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>